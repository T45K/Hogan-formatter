<idea-plugin>
    <id>io.github.t45k.hogan-formatter</id>
    <name>Hogan Formatter</name>
    <vendor email="tasktas9@gmail.com" url="https://t45k.github.io">T45K</vendor>

    <description><![CDATA[
    This is formatter for Hogan.<br>
    This formats your code like neat table.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="io.github.t45k.hogan_formatter.FormatAction"
                class="io.github.t45k.hogan_formatter.FormatAction">
            <keyboard-shortcut first-keystroke="alt SEMICOLON" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>
